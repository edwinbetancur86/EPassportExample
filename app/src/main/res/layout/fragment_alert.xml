<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edwinb.epassportexample.Fragments.AlertFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@android:color/white"
        android:gravity="center">

    <TextView
        android:id="@+id/prescriptNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginLeft="100dp"
        android:text="Prescription Name:" />

        <EditText
            android:id="@+id/prescriptName"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/prescriptNameLabel"
            android:hint="aspirin"/>


    <TextView
        android:id="@+id/timeOfPrescript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/prescriptName"
        android:text="To be taken:"/>

        <EditText
            android:id="@+id/timeOfPrescriptEdit"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/timeOfPrescript"
            android:hint="4:45pm" />

    </RelativeLayout>

</FrameLayout>
